header#header
	//text-align: center
	//line-height: 0px
	position: fixed
	width: 100%
	top: 0
	//background: rgba(0,0,0,.8)
	//color: rgba(255,255,255,1)

	background: #fff

	border-bottom: 1px solid rgba(45,45,45,0.1)
	box-shadow: 0 0 5px rgba(0,0,0,.15)
	.external
		padding: 10px 20px
		background: rgba(0,0,0,.8)
		// text-align: center

		ul
			max-width: 860px
			margin: auto
			font-size: 0
		li
			display: inline
			font-size: 0
		a
			display: inline-block
			width: 24px
			height: 24px
			margin-right: 10px
		img
			width: 24px
			filter: grayscale(.5)
			display: inline
			&:hover,&:active
				filter: grayscale(0)

	.site-desc
		padding: 20px
		max-width: 860px
		margin: auto
	a
		color: shaded-black
	h1, h2
		font-weight: normal

	h1
		font-size: 1.5em
	h2
		font-size: .7em
		font-weight: normal
