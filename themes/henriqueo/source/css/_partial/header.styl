header#header
	//text-align: center
	//line-height: 0px
	position: fixed
	width: 100%
	top: 0
	//background: rgba(0,0,0,.8)
	//color: rgba(255,255,255,1)

	background: #fff

	border-bottom: 1px solid rgba(45,45,45,0.1)
	box-shadow: 0 0 5px rgba(0,0,0,.15)
	.external
		padding: 10px 20px
		background: rgba(0,0,0,.8)
		clear: both
		// text-align: center
	.external-center
		max-width: 860px
		padding: 0

		margin: auto
		display: flex
		justify-content: space-between
		ul
			margin: 0
		ul#menu
			float: left
			font-size: 0


			li.menu-item
				display: inline
				a
					display: inline-block
					width: 24px
					height: 24px
					margin-right: 10px
				img
					width: 24px
					filter: grayscale(.5)
					display: inline
					&:hover,&:active
						filter: grayscale(0)

	.site-desc
		padding: 20px
		max-width: 860px
		margin: auto
	a
		color: shaded-black
	h1, h2
		font-weight: normal

	h1
		font-size: 1.5em
	h2
		font-size: .7em
		font-weight: normal

	.free-item
		display: inline-block
		float: right
		position: relative
		z-index: 2

	#get-in-touch
		font-size: 14px
		color: #fff
		margin: 0
		margin-top: 2.5px
		width: auto
		height: auto
		float: right
		font-weight: normal
		text-align: right
		position: relative
		display: block
		cursor: pointer

		transition: all .5s ease
		&:focus #contact-info
			visibility: visible
			opacity: 1
		.a-content
			font-size: 14px

	span#contact-info
		background: rgb(250,250,250)
		color: rgb(48,48,48)
		display: block
		visibility: hidden
		opacity: 0
		position: absolute
		right: 0
		z-index: 2
		margin-right: 26px
		margin-top: 10px
		font-size: 13px
		border: 1px solid rgba(0,0,0,.1)
		box-shadow: 0 0 1px rgba(0,0,0,0.1)

		ul#contact-list
			margin: 0
			padding: 0
			display: block
			li
				border-bottom: 1px solid rgba(0,0,0,.2)
				display: block

				a
					padding: 7px 10px
					display: block
					font-size: 14px
					text-align: left
					transition: background 0s
					&:hover
						background: rgba(0,0,0,0.05)

			li:last-of-type
				border-bottom: 0

		&::before
			content: " "
			border-left: 10px solid transparent
			border-right: 10px solid transparent
			border-bottom: 10px solid rgb(250,250,250)
			border-top: 10px solid transparent
			position: absolute
			margin-bottom: 20px
			top: -20px
			right: 5px




